{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"node_modules/*",
			"*.config.*",
			"*.json",
			"tsconfig.json",
			".turbo",
			".vscode",
			"dist/*",
			"examples/example-template/*",
			"packages/vite-websocket-server/*/types.ts"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useLiteralKeys": "off"
			}
		}
	},
	"formatter": {
		"enabled": true
	}
}
